<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Burg_paragit">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="670dp"
        android:backgroundTint="#BCF3FA"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="Периметр пирамидки будет равна сумме всех его сторон."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:layout_marginTop="130dp"
            android:text="Например все сторни Пермидки будут равен 6."/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginTop="230dp"
            android:text="Ответ Будет:
            P = 6 * 6."/>

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="225dp"
            android:layout_marginLeft= "170dp"
            app:srcCompat="@drawable/piramidka_6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:layout_marginTop="370dp"
            android:text="Мы умножаем на 6 почтамучто у пирамидки 6 сторон."/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:layout_marginTop="450dp"
            android:text="Задание:Вичеслить Периметр перамидки если его сторона равна 9."/>

        <EditText
            android:id="@+id/patasxan_inpat"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@drawable/edit_text_rounder_corner"
            android:backgroundTint="@color/blue"
            android:inputType="numberDecimal"
            android:layout_marginTop="585dp"
            android:layout_marginStart="75dp"/>




    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>