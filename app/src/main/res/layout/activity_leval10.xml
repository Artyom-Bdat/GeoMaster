<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".east_2.Leval_10">

    <androidx.cardview.widget.CardView
        android:layout_width="325dp"
        android:layout_height="400dp"
        android:backgroundTint="#BCF3FA"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491">


        <TextView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:text="Вычислить диагональ квадрата если a = 5."
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="40dp"
            android:layout_marginTop="250dp"

            android:text="@string/armat"
            />


        <EditText
            android:id="@+id/patasxan_Level_1"
            android:layout_width="215dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/edit_text_rounder_corner"
            android:backgroundTint="@color/blue"
            android:inputType="number" />

        <ImageView
            android:id="@+id/info"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="info"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="255dp"
            app:srcCompat="@drawable/info_button" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>