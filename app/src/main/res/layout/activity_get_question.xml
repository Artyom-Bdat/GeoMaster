<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".model.get_question">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="670dp"
        android:backgroundTint="#BCF3FA"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491">


        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="16dp"
            android:text="Создание вопросов"
            android:textSize="32sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/name_question"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:ems="20"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/disain"
            android:layout_marginTop="300dp"
            android:textSize="20dp"
            android:inputType="text"
            android:hint="Название вопроса" />

        <EditText
            android:id="@+id/question"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:ems="20"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/disain"
            android:layout_marginTop="300dp"
            android:inputType="text"
            android:textSize="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginVertical="360dp"
            android:hint="Вопрос" />

        <EditText
            android:id="@+id/answer"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:ems="20"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/disain"
            android:textSize="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:inputType="number"
            android:layout_marginVertical="420dp"
            android:hint="Ответ" />

        <Button
            android:id="@+id/get_question"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="500dp"
            android:layout_marginEnd="25dp"
            android:backgroundTint="@color/blue"
            android:gravity="center"
            android:onClick="register"
            android:text="Создать Вопрос"
            android:textSize="20dp" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="190dp"
            android:visibility="gone" />







    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>