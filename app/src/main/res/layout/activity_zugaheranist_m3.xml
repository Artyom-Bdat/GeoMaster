<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Zugaheranist_m3">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="670dp"
        android:backgroundTint="#BCF3FA"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491">



        <TextView
            android:layout_width="316dp"
            android:layout_height="129dp"
            android:text="@string/start_patuhan_standart"
            android:textSize="38dp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            />

        <Button
            android:id="@+id/satrt_patuhan_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/blue"
            android:text="назад"
            android:onClick="Nazad"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            />

        <ImageView
            android:id="@+id/qarakusu_paragit"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="65dp"
            android:backgroundTint="@color/backgraunds"
            android:layout_marginTop="250dp"
            android:onClick="Paragit"
            app:srcCompat="@drawable/zugaheranist_p" />

        <ImageView
            android:id="@+id/qarakusu_makeres_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="250dp"
            android:backgroundTint="@color/backgraunds"
            android:onClick="Makeres_koxmnayin"
            app:srcCompat="@drawable/zug_sb" />

        <ImageView
            android:id="@+id/qarakusu_nerqnadzig"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/backgraunds"
            android:layout_marginTop="250dp"
            android:layout_marginStart="215dp"
            android:onClick="Slriv"
            app:srcCompat="@drawable/zug_ss" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>