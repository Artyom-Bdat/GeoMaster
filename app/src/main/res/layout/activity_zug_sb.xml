<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Zug_sb">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="670dp"
        android:backgroundTint="#BCF3FA"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="Чтобы получить S (бок) вам нужно просто воспользоваться формулой."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_marginTop="155dp"
            android:text="Формула будет такава:S (бок) = P(ocн) * h."/>

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="235dp"
            android:layout_marginLeft="80dp"
            app:srcCompat="@drawable/zuh_sbb" />
        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:layout_marginTop="450dp"
            android:text="Задание:Вычислить S(бок) параллелепипеда если a = 5,b = 6, h = 10."/>

        <EditText
            android:id="@+id/patasxan_inpat"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@drawable/edit_text_rounder_corner"
            android:backgroundTint="@color/blue"
            android:inputType="numberDecimal"
            android:layout_marginTop="565dp"
            android:layout_marginStart="75dp"/>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>