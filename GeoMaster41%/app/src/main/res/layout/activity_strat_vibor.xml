<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".strat_vibor">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:backgroundTint="#BCF3FA"
        app:cardCornerRadius="30dp"
        android:onClick="Click"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11">

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Конкретные Задачи"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            />

        <TextView
            android:layout_width="335dp"
            android:layout_height="140dp"
            android:text="В Конкретном режиме вы можете выбрать конкретную фигуру и решение к нему."
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="270dp"
            android:layout_height="150dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="40dp"
            app:srcCompat="@drawable/uzor_fon_vibor" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:backgroundTint="#BCF3FA"
        app:cardCornerRadius="30dp"
        android:onClick="Click_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.849"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:text="Разные задачи"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            />

        <TextView
            android:layout_width="335dp"
            android:layout_height="140dp"
            android:text="В Разном режиме вам будет представлено разные упражнение,но решение к ним вы можтье найти в Конкретном режиме."
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"

            />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="350dp"
            android:layout_height="260dp"
            android:layout_marginTop="90dp"
            app:srcCompat="@drawable/uzor_vibor" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>