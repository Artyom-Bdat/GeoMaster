<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_primary"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="670dp"
        android:backgroundTint="#BCF3FA"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="200dp"
            app:srcCompat="@drawable/astx" />

        <TextView
            android:id="@+id/bali"
            android:layout_width="105dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="613dp"
            android:textSize="30dp"
            />



        <Button
            android:id="@+id/start"
            android:layout_width="170dp"
            android:layout_height="75dp"
            android:backgroundTint="@color/blue"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="90dp"
            android:layout_marginStart="90dp"
            android:onClick="Click"
            android:text="Старт"
            android:textColor="@color/white"
            android:textSize="27dp" />

        <Button
            android:id="@+id/lideri"
            android:layout_width="170dp"
            android:layout_height="75dp"
            android:backgroundTint="@color/blue"
            android:layout_marginTop="325dp"
            android:layout_marginEnd="90dp"
            android:layout_marginStart="90dp"
            android:text="Лидери"
            android:onClick="Lider"
            android:textColor="@color/white"
            android:textSize="27dp" />


        <Button
            android:id="@+id/logout"
            android:layout_width="170dp"
            android:layout_height="75dp"
            android:backgroundTint="@color/blue"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="90dp"
            android:layout_marginStart="90dp"
            android:text="Logout"
            android:textColor="@color/white"
            android:textSize="27dp" />

        <TextView
            android:id="@+id/user_detalis"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_marginTop="650dp"
            android:textColor="#000000"
            android:text="logOut"
            android:layout_width="200dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_gravity ="center_horizontal"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="500dp"
            android:textColor="#000000"
            android:text="logOut"
            android:layout_width="200dp"
            android:layout_height="50dp"/>


        <ImageView
        android:id="@+id/imageView18"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="Click"
            android:layout_marginTop="600dp"
            android:layout_marginStart="270dp"
        app:srcCompat="@drawable/info_button" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="100dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/cubik_gazan" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>

